@page "{id:int}"
@model LPA.Pages.Equipes.EditModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
    <h1 class="mb-3">Modifier une équipe</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="EditEquipeViewModel.Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Nom</label>
        <input type="text" class="form-control" asp-for="EditEquipeViewModel.Libelle" />
    </div>

    <div class="mb-3">
        <label class="form-label">Compétitions</label>
        @foreach (var competition in Model.Competitions)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="EditEquipeViewModel.CompetitionsId" value="@competition.Value" @(Model.EditEquipeViewModel.CompetitionsId.Contains(int.Parse(competition.Value)) ? "checked" : "") />
                <label class="form-check-label">@competition.Text</label>
            </div>
        }
    </div>

    <div class="mb-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary" asp-page-handler="Update">Enregistrer</button>
        <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Supprimer</button>
    </div>
</form>

